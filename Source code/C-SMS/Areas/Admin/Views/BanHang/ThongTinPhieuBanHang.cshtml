@using Common.Ultil

<div class="col-md-8">
    <!-- Start bordered form -->
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin sản phẩm</h3>
            </div>

            <div class="clearfix"></div>
        </div><!-- /.panel-heading -->
        <div class="panel-body no-padding">
            <div class="form-body">
                <div class="table-responsive mb-20">
                    <table class="table table-bordered">
                        <tr>
                            <td>Sản Phẩm</td>
                            <td>Đơn giá</td>
                            <td>Số lượng</td>
                            <td>Thành tiền</td>
                        </tr>

                        @foreach (var item in ViewBag.chiTietPhieuBanHang)
                        {
                            FormatNumber number = new FormatNumber();
                            <tr>
                                <td>@item.tenHangHoa</td>
                                <td>@item.gia</td>
                                <td>@item.soLuong</td>
                                <td>@number.FormatNumbers(@item.thanhTien.ToString())</td> 
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-4">
    <div class="panel rounded shadow">
        <div class="panel-heading">
            <div class="pull-left">
                <h3 class="panel-title">Thông tin phiếu bán hàng</h3>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.panel-heading -->
        <div class="panel-body no-padding">
            <form class="form-horizontal form-bordered" role="form">
                <div class="form-body">
                    @foreach (var a in ViewBag.phieuBanHang)
                    {
                        FormatNumber Number = new FormatNumber();
                        <div class="x_content">
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Số phiếu</label>
                                <div class="col-sm-8">
                                    <input value="@a.soPhieuBanHang" id="soPhieuBanHang" type="text" class="form-control rounded" disabled="disabled" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password-1" class="col-sm-4 control-label">Ngày bán</label>
                                <div class="col-sm-8">
                                    <input value="@a.ngayBan.ToString("dd/MM/yyyy")" disabled="disabled" type="text" class="form-control rounded" />

                                </div>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Nhân viên</label>
                                <div class="col-sm-8">
                                    <input value="@a.tenNhanVien" type="text" class="form-control rounded" disabled="disabled" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Khách hàng</label>
                                <div class="col-sm-8">
                                    <input value="@a.tenKhachHang" type="text" class="form-control rounded" disabled="disabled" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Số điện thoại</label>
                                <div class="col-sm-8">
                                    <input value="@a.soDienThoai" type="text" class="form-control rounded" disabled="disabled" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Ghi chú</label>
                                <div class="col-sm-8">
                                    <textarea placeholder="Ghi chú viết tại đây" class="form-control rounded">@a.ghiChu</textarea>
                                </div>
                            </div>
                            <div class="form-group form-group-divider">
                                <div class="form-inner">
                                    <h4 class="no-margin">Thông tin thanh toán</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="firstname-1" class="col-sm-4 control-label">Tổng tiền</label>
                                <div class="col-sm-8">
                                    <input id="tongTien" value="@Number.FormatNumbers(@a.tongTien.ToString())" disabled="disabled" type="text" class="form-control rounded" />

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-left:0%">
                            <label class="control-label col-md-12 col-sm-2 col-xs-12" style="color:red">(*) Lưu ý tiền được tính theo VNĐ</label>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/bootstrap.min.js"></script>