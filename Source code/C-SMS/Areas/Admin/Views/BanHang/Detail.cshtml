@model IEnumerable<Common.ViewModels.KiemKhoViewModel>

@{
    ViewBag.Title = "Thông tin chi tiết phiếu bán hàng";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Phiếu Bán Hàng</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            <button class="btn btn-lg btn-success btn-xs btn-push" onclick="@("window.location.href='" + @Url.Action("Index", "BanHang") + "'"); ">
                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
            </button>
            <button class="btn btn-lg btn-success btn-xs btn-push" onclick="@("window.location.href='" + @Url.Action("Create", "BanHang") + "'"); ">
                <i class="glyphicon glyphicon-edit"></i>
                Tạo mới phiếu bán hàng
            </button>
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            @{Html.RenderAction("ThongTinPhieuBanHang", "BanHang");}

        </div>
    </div>
</section>
<script src="~/Scripts/bootstrap.min.js"></script>