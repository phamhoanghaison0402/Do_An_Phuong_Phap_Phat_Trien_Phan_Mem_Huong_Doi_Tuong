@model IEnumerable<Common.ViewModels.PhieuBaoHanhViewModel>

@{
    ViewBag.Title = "Hủy phiếu bảo hành";
    Layout = "~/Areas/Admin/Views/Layout/HomeLayout.cshtml";
}

<section id="page-content">
    <div class="header-content">
        <h2><i class="fa fa-list-alt"></i>Phiếu Bảo Hành</h2>
        <div class="breadcrumb-wrapper hidden-xs">
            @using (Html.BeginForm("Delete", "BaoHanh"))
            {
                <button class="btn btn-sm btn-danger btn-xs btn-push" id="submit">
                    <i class="fa fa-trash"></i> Hủy Phiếu Bảo Hành
                </button>
            }
        </div>
    </div>
    <div class="body-content animated fadeIn">
        <div class="row">
            <div class="alert alert-danger1 fade in">
                <span><i class="fa fa-bullhorn"></i> Bạn có chắc chắn muốn hủy?</span>
            </div>

            @{Html.RenderAction("ThongTinPhieuBaoHanh", "BaoHanh");}
        </div>

    </div>
</section>

<script src="~/Scripts/bootstrap.min.js"></script>

